{
    "$schema": "https://raw.githubusercontent.com/Azure/data-api-builder/main/schemas/dab.draft.schema.json",
    "data-source": {
        "database-type": "mssql",
        "connection-string": "@env('ConnectionStrings__DefaultConnection')"
    },
    "runtime": {
        "rest": {
            "enabled": true,
            "path": "/api"
        },
        "graphql": {
            "enabled": true,
            "path": "/graphql",
            "allow-introspection": true
        },
        "host": {
            "mode": "development",
            "cors": {
                "origins": ["*"],
                "allow-credentials": false
            },
            "authentication": {
                "provider": "StaticWebApps"
            }
        },
        "swagger": {
            "enabled": true,
            "path": "/swagger"
        }
    },
    "entities": {
        "Categories": {
            "source": "Categories",
            "rest": {
                "path": "/categories"
            },
            "graphql": {
                "enabled": true,
                "type": "Categories"
            },
            "relationships": {
                "products": {
                    "cardinality": "Many",
                    "target.entity": "Products",
                    "source.fields": ["CategoryID"],
                    "target.fields": ["CategoryID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Customers": {
            "source": "Customers",
            "rest": {
                "path": "/customers"
            },
            "graphql": {
                "enabled": true,
                "type": "Customers"
            },
            "relationships": {
                "orders": {
                    "cardinality": "Many",
                    "target.entity": "Orders",
                    "source.fields": ["CustomerID"],
                    "target.fields": ["CustomerID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Employees": {
            "source": "Employees",
            "rest": {
                "path": "/employees"
            },
            "graphql": {
                "enabled": true,
                "type": "Employees"
            },
            "relationships": {
                "orders": {
                    "cardinality": "Many",
                    "target.entity": "Orders",
                    "source.fields": ["EmployeeID"],
                    "target.fields": ["EmployeeID"]
                },
                "manager": {
                    "cardinality": "One",
                    "target.entity": "Employees",
                    "source.fields": ["ReportsTo"],
                    "target.fields": ["EmployeeID"]
                },
                "directReports": {
                    "cardinality": "Many",
                    "target.entity": "Employees",
                    "source.fields": ["EmployeeID"],
                    "target.fields": ["ReportsTo"]
                },
                "territories": {
                    "cardinality": "Many",
                    "target.entity": "Territories",
                    "source.fields": ["EmployeeID"],
                    "target.fields": ["EmployeeID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "OrderDetails": {
            "source": "Order Details",
            "rest": {
                "path": "/order-details"
            },
            "graphql": {
                "enabled": true,
                "type": "OrderDetails"
            },
            "relationships": {
                "order": {
                    "cardinality": "One",
                    "target.entity": "Orders",
                    "source.fields": ["OrderID"],
                    "target.fields": ["OrderID"]
                },
                "product": {
                    "cardinality": "One",
                    "target.entity": "Products",
                    "source.fields": ["ProductID"],
                    "target.fields": ["ProductID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Orders": {
            "source": "Orders",
            "rest": {
                "path": "/orders"
            },
            "graphql": {
                "enabled": true,
                "type": "Orders"
            },
            "relationships": {
                "customer": {
                    "cardinality": "One",
                    "target.entity": "Customers",
                    "source.fields": ["CustomerID"],
                    "target.fields": ["CustomerID"]
                },
                "employee": {
                    "cardinality": "One",
                    "target.entity": "Employees",
                    "source.fields": ["EmployeeID"],
                    "target.fields": ["EmployeeID"]
                },
                "shipper": {
                    "cardinality": "One",
                    "target.entity": "Shippers",
                    "source.fields": ["ShipVia"],
                    "target.fields": ["ShipperID"]
                },
                "orderDetails": {
                    "cardinality": "Many",
                    "target.entity": "OrderDetails",
                    "source.fields": ["OrderID"],
                    "target.fields": ["OrderID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Products": {
            "source": "Products",
            "rest": {
                "path": "/products"
            },
            "graphql": {
                "enabled": true,
                "type": "Products"
            },
            "relationships": {
                "category": {
                    "cardinality": "One",
                    "target.entity": "Categories",
                    "source.fields": ["CategoryID"],
                    "target.fields": ["CategoryID"]
                },
                "supplier": {
                    "cardinality": "One",
                    "target.entity": "Suppliers",
                    "source.fields": ["SupplierID"],
                    "target.fields": ["SupplierID"]
                },
                "orderDetails": {
                    "cardinality": "Many",
                    "target.entity": "OrderDetails",
                    "source.fields": ["ProductID"],
                    "target.fields": ["ProductID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Region": {
            "source": "Region",
            "rest": {
                "path": "/regions"
            },
            "graphql": {
                "enabled": true,
                "type": "Region"
            },
            "relationships": {
                "territories": {
                    "cardinality": "Many",
                    "target.entity": "Territories",
                    "source.fields": ["RegionID"],
                    "target.fields": ["RegionID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Shippers": {
            "source": "Shippers",
            "rest": {
                "path": "/shippers"
            },
            "graphql": {
                "enabled": true,
                "type": "Shippers"
            },
            "relationships": {
                "orders": {
                    "cardinality": "Many",
                    "target.entity": "Orders",
                    "source.fields": ["ShipperID"],
                    "target.fields": ["ShipVia"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Suppliers": {
            "source": "Suppliers",
            "rest": {
                "path": "/suppliers"
            },
            "graphql": {
                "enabled": true,
                "type": "Suppliers"
            },
            "relationships": {
                "products": {
                    "cardinality": "Many",
                    "target.entity": "Products",
                    "source.fields": ["SupplierID"],
                    "target.fields": ["SupplierID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        },
        "Territories": {
            "source": "Territories",
            "rest": {
                "path": "/territories"
            },
            "graphql": {
                "enabled": true,
                "type": "Territories"
            },
            "relationships": {
                "region": {
                    "cardinality": "One",
                    "target.entity": "Region",
                    "source.fields": ["RegionID"],
                    "target.fields": ["RegionID"]
                },
                "employees": {
                    "cardinality": "Many",
                    "target.entity": "Employees",
                    "source.fields": ["TerritoryID"],
                    "target.fields": ["EmployeeID"]
                }
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["*"]
                }
            ]
        }
    }
}
